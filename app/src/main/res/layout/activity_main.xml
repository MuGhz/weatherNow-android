<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:background="@color/colorBackground"
    tools:context="com.example.muhammadghozi41.weathernow.MainActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textInputEditTextLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_location"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@android:color/white" />
    </android.support.design.widget.TextInputLayout>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/appCompatButtonSearch"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/colorTextHint"
            android:text="@string/text_search_weather"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/appCompatButtonFavorite"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/colorTextHint"
            android:text="@string/favorite"
            android:layout_marginTop="10dp"/>
    </android.support.v7.widget.LinearLayoutCompat>


</android.support.constraint.ConstraintLayout>
